{
  "manifest_version": 3,
  "name": "Active Time Tracker",
  "description": "Tracks how much active time you spend on each website.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage",
    "activeTab", 
    "idle", 
    "windows"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "dist/index.html"
  }, 

  "background": {
    "service_worker": "background.js"
  }, 

  "icons": {
    "16": "icons/icon.png", 
    "48": "icons/icon.png", 
    "128": "icons/icon.png"
  }
}